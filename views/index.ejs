<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="styles.css">
        <title>Todo MVC</title>
    </head>
    <body>
        
        <div class="container1">
            <div class="container">
            <!-- <div class="header"> -->
                <h1 class="todos-title">todos</h1>
                <div class="bodyy">
                <div class="textfield">
        
                    <form action="<%=url%>/new-todo" method="POST" class="input-form" <% if(all>0){%> style="border-bottom: 1px solid #ededed" <%}%>  >
                        <a href="<%=url%>/toggle-all" id="toggle-a">
                            <img src="arrow.jpg" alt="Toggle all" <%if(all <= 0 ){%> hidden<% }%>>
                        </a>
                        <input type="text" name="todo" class="form-control" placeholder="What needs to be done?" autofocus></input>
                        <input type="submit" value="Add Todo" class="submit-button" hidden>
                    </form>
        
                </div>
                


            <%if(all > 0 ){%>
            <div id="list" class="todo-div">

                <ul class="todo-list">
                    <% todo.forEach(todos =>{ %>
                        <li>
                        <div id="div-task">
                            <form id ="f:<%=todos._id%>" class="one-todo" action="<%=url%>/check/<%=todos._id%>" method="POST" <% if(edit ==false){%> style="padding: 13; padding-right: 23; padding-left: 6px;" <% }%>>
                                <input id="c:<%=todos._id%>"class="toggle" name="completed" onChange="this.form.submit()" type="checkbox" <% if(todos.completed == true){%> checked<%}%>>
                                <label for="c:<%=todos._id%>" class="checkLab" hidden></label>
                                <% if(edit==false){%>
                                <label value="<%=todos.todo%>" id="l:<%=todos._id%>" class="t-label" <% if(todos.completed == true){%>style="text-decoration: line-through; color: #d9d9d9"<%}%> ondblclick="changeTodo(this, '<%=url%>')"> <%= todos.todo%> </label>
                                <a href="<%=url%>/delete-todo/<%=todos._id%>" class="destroy" id="i:<%=todos._id%>" >
                                    <!-- <img src="x.png" alt="X"> -->X
                                </a>
                                <%}%>
                            </form>    
                        </div>
                        
                    </li>                  
                    <%})%>
                </ul>
    
            </div>
            <div class="footer">
                <label class="items-left"><%=count%> items left</label>
                <ul class="footer-list">
                    <!-- <div class="filters"> -->
                    <li><a href="/">All</a></li>
                    <li><a href="/active">Active</a></li>
                    <li><a href="/completed">Completed</a></li>
                    <!-- </div> -->
                </ul>
                
                <label class="clear-completed" <% if(comp <= 0){%> hidden <%}%>><a href="<%=url%>/clear-completed">Clear completed</a></label>
            </div>
            <% }%>
        </div>
        </div>
        </div>
        <script src="script.js"></script>
    </body>
</html>